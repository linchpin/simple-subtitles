<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor
        configVersion="3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://www.phpdoc.org"
        xsi:noNamespaceSchemaLocation="https://docs.phpdoc.org/latest/phpdoc.xsd"
>
    <title>Elite</title>
    <paths>
        <output>wiki/api</output>
        <cache>wiki/cache</cache>
    </paths>
    <version number="3.0.0">
        <api>
            <source dsn=".">
                <path>application/*</path>
                <path>assets/js/*</path>
                <path>wsdl/*</path>
                <path>elite.php</path>
            </source>
            <ignore hidden="true" symlinks="true">
                <path>tests/**/*</path>
                <path>build/**/*</path>
                <path>var/**/*</path>
                <path>vendor/**/*</path>
            </ignore>
        </api>
    </version>
    <template location="vendor/linchpin/phpdocumentor-template-markdown" />
</phpdocumentor>